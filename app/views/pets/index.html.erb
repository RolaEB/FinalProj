
<%= render 'userNavBar',user: current_user %>
<%= render 'sideBar',title: "Pet Sale" %>
<%= render 'carousel' %>

<div class="row">
<% @pets.each do |pet| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
              
              <%=link_to(image_tag(pet.photo.thumbIndex.url, alt: 'Photo'),pet.photo.url,target:'_blank')  if pet.photo? %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to pet.name ,pet %>
                  </h4>
                  <h5><%= pet.price %> $</h5>
                  <p class="card-text"><%= pet.breed %></p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">created <%= pet.created_at.to_date %></small>
                </div>
              </div>
            </div>
            <% end %>
  </div>
  

   

<%= link_to 'New Pet', new_pet_path %>

<%= render 'endIndexPage' %>
<%= render 'footer' %>