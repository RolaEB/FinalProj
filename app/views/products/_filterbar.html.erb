<div class="row">

 <div class="col-lg-3">

 <h1 class="my-4"><%= title %></h1>
 <%= form_for_filterrific @filterrific do |f| %>

    <div class="form-group">
      <label>Search</label>
      
      <%= f.text_field(:search_query,
        class:'filterrific-periodically-observed form-control'
      ) %>
    </div>

    <div class="form-group">
      <label>Type</label>
      <%= f.select(
        :with_type_id,
        @filterrific.select_options[:with_type_id],
        { include_blank: '- Any -' },
        class:'form-control'
      ) %>
    </div>
    <div class="form-group">
      <label>Category</label>
      <%= f.select(
        :with_category_id,
        @filterrific.select_options[:with_category_id],
        { include_blank: '- Any -' },
        class:'form-control'
      ) %>
    </div>
    
   <div class="form-group" >
      <label>Sorted by</label>
      <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by],class:'form-control') %>
    </div>
    <div>
      <%= link_to(
        'Reset filters',
        reset_filterrific_url,
      ) %>
    </div>
    <%# add an automated spinner to your form when the list is refreshed %>
    <%= render_filterrific_spinner %>
  <% end %>
  <hr>
  <br/>
  <div class="text-center">
  <% if current_user.is_store == 1 %> 
  <%= link_to 'Add a new product', new_product_path,class:'btn btn-success' %>
  <br/>
  <br/>
  <br/>
  <%= link_to 'See your Balance', event_payment_profile_path,class:'btn btn-warning' %>
   <% end %>
  </div>
 
 </div>